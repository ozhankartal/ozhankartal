<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    tools:context="com.example.ozhankartal.birebirders.FragmentAnasayfa">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="80dp"

            android:layout_marginRight="10dp"
            android:background="@drawable/anasayfa_tasarim"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/anasayfa_tasarim"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/makale11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/profil_button_tikla"
            android:text="Makale"
            android:textColor="@color/colorBeyaz"
            android:layout_below="@+id/imageButton6"
            android:layout_alignLeft="@+id/imageButton6"
            android:layout_alignStart="@+id/imageButton6"
            />

        <Button
            android:id="@+id/video11"
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:layout_height="100dp"
            android:background="@drawable/profil_button_tikla"
            android:text="VideoSet"
            android:textColor="@color/colorBeyaz"
            android:layout_below="@+id/imageButton7"
            android:layout_alignLeft="@+id/imageButton7"
            android:layout_alignStart="@+id/imageButton7"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/egitim11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/profil_button_tikla"
            android:text="EgitimSet"
            android:textColor="@color/colorBeyaz"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Etkinlik"
            android:id="@+id/etkinlik11"
            android:background="@drawable/anasayfa_tasarim"
            android:textColor="@color/colorBeyaz"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
